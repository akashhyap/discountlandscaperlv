---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';

const projects = [
  {
    title: "Modern Desert Oasis",
    location: "Summerlin, Las Vegas",
    description: "A complete backyard transformation featuring artificial turf, custom fire pit, and desert-friendly plants.",
    tags: ["Artificial Turf", "Hardscaping", "Desert Landscaping"],
    images: [
      "/images/portfolio/project1-1.jpg",
      "/images/portfolio/project1-2.jpg",
      "/images/portfolio/project1-3.jpg"
    ],
    featured: true
  },
  {
    title: "Mediterranean-Inspired Front Yard",
    location: "Henderson, NV",
    description: "A drought-resistant front yard design with Mediterranean influences, featuring decorative rock, olive trees, and efficient irrigation.",
    tags: ["Front Yard", "Desert Landscaping", "Irrigation"],
    images: [
      "/images/portfolio/project2-1.jpg",
      "/images/portfolio/project2-2.jpg"
    ],
    featured: true
  },
  {
    title: "Entertainer's Backyard Paradise",
    location: "North Las Vegas",
    description: "A complete backyard entertainment space with paver patio, outdoor kitchen, pergola, and custom lighting.",
    tags: ["Hardscaping", "Outdoor Lighting", "Pavers"],
    images: [
      "/images/portfolio/project3-1.jpg",
      "/images/portfolio/project3-2.jpg",
      "/images/portfolio/project3-3.jpg"
    ],
    featured: true
  },
  {
    title: "Minimalist Desert Retreat",
    location: "Las Vegas",
    description: "A clean, modern desert landscape featuring geometric design elements, cacti, and strategic shade trees.",
    tags: ["Desert Landscaping", "Modern Design", "Low Maintenance"],
    images: [
      "/images/portfolio/project4-1.jpg",
      "/images/portfolio/project4-2.jpg"
    ],
    featured: false
  },
  {
    title: "Family-Friendly Yard Renovation",
    location: "Summerlin, Las Vegas",
    description: "A versatile outdoor space designed for family enjoyment with artificial turf play area, shade structures, and secure fencing.",
    tags: ["Artificial Turf", "Family-Friendly", "Shade Structures"],
    images: [
      "/images/portfolio/project5-1.jpg",
      "/images/portfolio/project5-2.jpg"
    ],
    featured: false
  },
  {
    title: "Poolside Desert Landscape",
    location: "Henderson, NV",
    description: "A pool-adjacent landscape design featuring desert plants, decorative rock, and ambient lighting for evening enjoyment.",
    tags: ["Pool Landscaping", "Outdoor Lighting", "Desert Plants"],
    images: [
      "/images/portfolio/project6-1.jpg",
      "/images/portfolio/project6-2.jpg"
    ],
    featured: false
  },
  {
    title: "Commercial Plaza Renovation",
    location: "Las Vegas Strip",
    description: "A commercial landscaping project focused on creating an attractive, low-maintenance entrance for a business plaza.",
    tags: ["Commercial", "Low Maintenance", "Entrance Design"],
    images: [
      "/images/portfolio/project7-1.jpg",
      "/images/portfolio/project7-2.jpg"
    ],
    featured: false
  },
  {
    title: "Water-Smart Residential Conversion",
    location: "North Las Vegas",
    description: "A lawn-to-xeriscape conversion that reduced water usage by 70% while creating a vibrant, colorful landscape.",
    tags: ["Xeriscape", "Water Conservation", "Conversion"],
    images: [
      "/images/portfolio/project8-1.jpg",
      "/images/portfolio/project8-2.jpg"
    ],
    featured: false
  }
];

const testimonials = [
  {
    quote: "Discount Landscaper transformed our barren backyard into a desert oasis that we use year-round. Their team was professional, on time, and delivered exactly what they promised.",
    author: "Michael R.",
    location: "Summerlin",
    rating: 5
  },
  {
    quote: "We were amazed at how quickly and efficiently they installed our artificial turf. The quality is outstanding, and two years later it still looks brand new despite our dogs playing on it daily.",
    author: "Jennifer L.",
    location: "Henderson",
    rating: 5
  },
  {
    quote: "From design to completion, the team at Discount Landscaper was a pleasure to work with. They took our vague ideas and created a beautiful, functional outdoor space that exceeded our expectations.",
    author: "David & Sarah T.",
    location: "Las Vegas",
    rating: 5
  }
];

// Filter featured projects
const featuredProjects = projects.filter(project => project.featured);
---

<Layout 
  title="Our Portfolio | Discount Landscaper LV" 
  description="View our portfolio of landscaping projects in Las Vegas, including desert landscaping, artificial turf, hardscaping, and more."
>
  <section class="relative py-16 md:py-24">
    <div class="absolute inset-0 z-0 bg-gradient-to-b from-gray-50 to-white"></div>
    <div class="container relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl lg:text-5xl font-black mb-4">Our <span class="text-primary">Portfolio</span></h1>
        <p class="text-xl mb-8">
          Showcasing our finest landscaping projects across Las Vegas
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Projects Section -->
  <section class="py-16 bg-white">
    <div class="container">
      <h2 class="text-3xl font-bold mb-12 text-center">Featured Projects</h2>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {featuredProjects.map((project, index) => (
          <div class="bg-white rounded-lg shadow-md overflow-hidden group">
            <div class="relative h-64 overflow-hidden">
              <Image 
                src={project.images[0]} 
                alt={project.title} 
                width={800}
                height={600}
                format="webp"
                quality={80}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                loading={index === 0 ? "eager" : "lazy"}
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end">
                <div class="p-4 text-white">
                  <h3 class="text-xl font-bold">{project.title}</h3>
                  <p class="text-sm">{project.location}</p>
                </div>
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2">{project.title}</h3>
              <p class="text-sm text-gray-500 mb-3">{project.location}</p>
              <p class="text-gray-700 mb-4">{project.description}</p>
              <div class="flex flex-wrap gap-2">
                {project.tags.map(tag => (
                  <span class="bg-secondary/10 text-secondary text-xs px-3 py-1 rounded-full">{tag}</span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- All Projects Gallery -->
  <section class="py-16 bg-secondary/5">
    <div class="container">
      <h2 class="text-3xl font-bold mb-12 text-center">Project Gallery</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        {projects.flatMap(project => 
          project.images.map((image, imgIndex) => (
            <div class="relative aspect-square overflow-hidden rounded-lg shadow-md group">
              <Image 
                src={image} 
                alt={`${project.title} - Image ${imgIndex + 1}`} 
                width={600}
                height={400}
                format="webp"
                quality={80}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end">
                <div class="p-4 text-white">
                  <h3 class="text-lg font-bold">{project.title}</h3>
                  <p class="text-xs">{project.tags[0]}</p>
                </div>
              </div>
            </div>
          ))
        )}
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-16 bg-white">
    <div class="container">
      <h2 class="text-3xl font-bold mb-12 text-center">What Our Clients Say</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map(testimonial => (
          <div class="bg-white p-8 rounded-lg shadow-md relative">
            <div class="absolute -top-5 right-8 text-primary opacity-20">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9.983 3v7.391c0 5.704-3.731 9.57-8.983 10.609l-.995-2.151c2.432-.917 3.995-3.638 3.995-5.849h-4v-10h9.983zm14.017 0v7.391c0 5.704-3.748 9.571-9 10.609l-.996-2.151c2.433-.917 3.996-3.638 3.996-5.849h-3.983v-10h9.983z"/>
              </svg>
            </div>
            <div class="flex items-center mb-4">
              {[...Array(testimonial.rating)].map(() => (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-500" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <p class="text-gray-700 mb-6 italic">"{testimonial.quote}"</p>
            <div>
              <p class="font-bold">{testimonial.author}</p>
              <p class="text-sm text-gray-500">{testimonial.location}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary text-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6">Ready to Start Your Project?</h2>
        <p class="text-xl mb-8 text-white/90">
          Contact us today to schedule a consultation and join our growing list of satisfied customers.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/quote" class="inline-block bg-white text-primary hover:bg-gray-100 font-medium py-3 px-8 rounded-md transition-colors">
            Get a Free Quote
          </a>
          <a href="/get-in-touch" class="inline-block bg-transparent border-2 border-white text-white hover:bg-white/10 font-medium py-3 px-8 rounded-md transition-colors">
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
