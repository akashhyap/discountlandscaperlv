---

<section class="py-20" id="quote-section">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="section-title mb-4">
        Get Your <span class="text-primary">Free Quote</span> Today
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Transform your outdoor space with our professional landscaping services.
        Fill out the form below to get started.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-stretch">
      <!-- Why Choose Us Section -->
      <div class="bg-white p-8 rounded-lg h-full flex flex-col">
        <h3 class="text-2xl font-bold mb-6">Why Choose Us</h3>
        <div class="space-y-6 flex-grow">
          {
            benefits.map((benefit) => (
              <div class="flex gap-5">
                <div class="flex-shrink-0 text-primary">
                  <Fragment set:html={benefit.icon} />
                </div>
                <div>
                  <h4 class="text-lg font-semibold mb-1">{benefit.title}</h4>
                  <p class="text-gray-600">{benefit.description}</p>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Quote Form Section -->
      <div class="bg-white p-8 rounded-lg shadow-md h-full flex flex-col">
        <h3 class="text-2xl font-bold mb-4">Request a Free Quote</h3>
        <div class="flex-grow">
          <LeadForm 
            formId="1e3V9ETIeQ7mf5c77JGC" 
            formName="Quote Request Form" 
          />
        </div>
      </div>
    </div>
  </div>
</section>
